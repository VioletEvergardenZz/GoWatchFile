# 本文件用于环境变量示例 复制为 .env 后填写
# 仅在系统环境未设置时生效

# OSS 访问配置 必填
OSS_BUCKET=your-bucket
OSS_ENDPOINT=https://oss-cn-hangzhou.aliyuncs.com
OSS_REGION=cn-hangzhou
OSS_AK=your-ak
OSS_SK=your-sk

# OSS 地址开关 可选
OSS_FORCE_PATH_STYLE=false
OSS_DISABLE_SSL=false

# 钉钉机器人 可选
DINGTALK_WEBHOOK=https://oapi.dingtalk.com/robot/send?access_token=your-token
DINGTALK_SECRET=your-dingtalk-secret

# 邮件通知 可选
EMAIL_USER=your-user@example.com
EMAIL_PASS=your-email-pass
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_FROM=your-user@example.com
EMAIL_TO=receiver@example.com
EMAIL_USE_TLS=true

# 预留字段 可选
ROBOT_KEY=your-robot-key

# API 安全配置（建议必填）
API_AUTH_TOKEN=change-this-token
# 允许跨域来源，多个用逗号分隔
API_CORS_ORIGINS=http://localhost:8081,http://localhost:5173

# 上传队列持久化（静态配置，需重启生效）
UPLOAD_QUEUE_PERSIST_ENABLED=false
UPLOAD_QUEUE_PERSIST_FILE=logs/upload-queue.json

# AI 分析配置（可选）
AI_ENABLED=false
AI_BASE_URL=https://api.openai.com/v1
AI_API_KEY=your-ai-api-key
AI_MODEL=gpt-4o-mini
AI_TIMEOUT=20s
AI_MAX_LINES=200
