# 文件监控配置
WATCH_DIR=/path/to/watch
# 仅支持单一后缀。示例：.log / .txt / .zip
FILE_EXT=.log

# 通知机器人配置（可选）
ROBOT_KEY=your-robot-key
DINGTALK_WEBHOOK=https://oapi.dingtalk.com/robot/send?access_token=your-token
DINGTALK_SECRET=your-dingtalk-secret

# 邮件通知配置（可选）
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your-user@example.com
EMAIL_PASS=your-email-pass
EMAIL_FROM=alerts@example.com
EMAIL_TO=ops@example.com,dev@example.com
EMAIL_USE_TLS=true

# S3兼容对象存储配置
S3_BUCKET=your-bucket
S3_AK=your-ak
S3_SK=your-sk
S3_ENDPOINT=s3.example.com
S3_REGION=us-east-1
S3_FORCE_PATH_STYLE=false
S3_DISABLE_SSL=false

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/file-watch.log
LOG_TO_STD=true
LOG_SHOW_CALLER=false

# 上传工作池配置
UPLOAD_WORKERS=3
UPLOAD_QUEUE_SIZE=100

# API 服务
API_BIND=:8080
